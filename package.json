{
  "name": "koa2-typescript-starter",
  "version": "1.0.0",
  "description": "Koa2 starter using TypeScript",
  "main": "index.js",
  "dependencies": {
    "bunyan": "^1.8.1",
    "koa": "2.0.0-alpha.5",
    "koa-router": "^7.0.1",
    "mongoose": "4.5.9",
    "nconf": "^0.8.4",
    "pm2": "1.1.3",
    "typescript": "1.8.10"
  },
  "devDependencies": {
    "nodemon": "^1.10.2",
    "ts-node": "^1.2.3",
    "typings": "1.3.2"
  },
  "scripts": {
    "start": "node ./build/index.js",
    "build": "tsc --pretty",
    "dev": "node ./node_modules/nodemon/bin/nodemon.js -x \"node ./node_modules/ts-node/dist/bin.js\" ./src/index.ts | node node_modules/bunyan/bin/bunyan",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "node ./node_modules/typings install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yannickadam/koa2-typescript-starter.git"
